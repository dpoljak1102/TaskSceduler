<UserControl x:Class="TaskSceduler.App.Views.InitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskSceduler.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Max number of concurrent jobs" HorizontalAlignment="Center" VerticalAlignment="Top"
               Margin="0,5,0,0" Width="200"/>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,5" Width="100"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 />
        <Button Content="Start" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,5" Width="100"
                Command="{Binding NavigateHomeViewCommand, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
    </Grid>
</UserControl>
